<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_silver"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.csware.ee.view.TopActionBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:canClose="true" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/RegionBox"
        >


        <LinearLayout style="@style/PicBox">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bank_iocn_gsyh" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labName"
                    style="@style/TitleFont"
                    android:textSize="@dimen/title_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国银行" />
                <TextView
                    style="@style/TitleFont"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginLeft="@dimen/icon_very_small_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/savings" />
            </LinearLayout>

            <TextView
                android:id="@+id/labCarNo"
                style="@style/LabelFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2222" />
        </LinearLayout>
        <!--<LinearLayout style="@style/EndPicBox"-->
            <!--android:gravity="right">-->

            <!--<TextView-->
                <!--android:id="@+id/txtMailBtn"-->
                <!--android:gravity="right"-->
                <!--android:layout_gravity="center_horizontal|center_vertical"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:singleLine="true"-->
                <!--android:text="详情"-->
                <!--style="@style/MailOnFont"-->
                <!--android:layout_height="wrap_content" />-->

        <!--</LinearLayout>-->
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        style="@style/RegionBox"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/single_limit"
                android:padding="@dimen/icon_very_small_h"
                style="@style/NormalFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtSingleLmt"
                android:text="50000元"
                android:padding="@dimen/icon_very_small_h"
                android:gravity="right"
                style="@style/NormalFont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        style="@style/RegionBox"
        android:layout_marginTop="0.5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/daily_limit"
                android:padding="@dimen/icon_very_small_h"
                style="@style/NormalFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtDailyLmt"
                android:text="50000元"
                android:padding="@dimen/icon_very_small_h"
                android:gravity="right"
                style="@style/NormalFont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>