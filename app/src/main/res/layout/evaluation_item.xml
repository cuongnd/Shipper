<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_silver"
    >

    <LinearLayout
        android:id="@+id/btnComment"
        style="@style/RegionPaddingBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/RegionLabelBox"
            android:orientation="vertical">

            <TextView
                style="@style/LabelFont"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_txt"
                android:text="评价" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="right|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="fill_parent">
        <RatingBar
            android:id="@+id/rate_rating"
            style="@style/roomRatingBar"
            android:isIndicator="true"
            android:padding="0.3dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3" />
        </LinearLayout>
        <!--<LinearLayout android:layout_height="wrap_content" android:layout_width="0dp"-->
            <!--android:visibility="gone"-->
            <!--android:layout_weight="0.7" android:gravity="center|right" android:id="@+id/Lin_rating">-->

            <!--<ImageView-->
                <!--android:id="@+id/ivCommentGo"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/dd_icon_yl" />-->
        <!--</LinearLayout>-->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/txt_context"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/most_black"
            android:textSize="@dimen/normal_text_size"
            android:padding="12dp"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/default_prompt_gray"
            android:textSize="@dimen/small_text_size"
            />


    </RelativeLayout>








</LinearLayout>