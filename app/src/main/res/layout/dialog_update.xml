<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_stroke"
        android:layout_centerVertical="true"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_silver"
            >


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现新版本"
                android:textColor="@color/most_black"
                android:textSize="@dimen/title_huge_text_size"
                />
        </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="1dp"
             android:background="@color/white"
             android:orientation="vertical"
             android:padding="14dp"
             >
             <TextView
                 android:id="@+id/versionCode"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/input_text_size"
                 android:text=""
                 android:visibility="visible"
                 />

             <TextView
                 android:id="@+id/updat_content"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/icon_very_small_h"
                 android:textSize="@dimen/input_text_size"
                 android:text=""
                 />

         </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lin"
            android:background="@color/white"
            android:layout_marginTop="1dp">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="50dp"
                android:text="@string/dialog_later"
                android:textColor="@color/most_black"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/bg_silver"
                />
            <Button
                android:id="@+id/confirm_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="50dp"
                android:text="@string/dialog_update"
                android:textColor="@color/most_black"
                />

        </LinearLayout>





        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>