<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 货物类型-->
    <LinearLayout
        style="@style/RegionBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/RegionLabelIconBox"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wyfh_icon_fh" />
        </LinearLayout>

        <LinearLayout style="@style/RegionRowBox">


            <TextView
                style="@style/LabelFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_sent_time" />

            <LinearLayout
                android:id="@+id/optBeginTime"
                style="@style/RegionRowBodyBox">

                <TextView
                    style="@style/NormalFont"
                    android:id="@+id/labBeginTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_choose_start_time"
                    android:text=""
                    android:textColorHint="@color/hint_face_color" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wyfh_icon_zk" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <!-- 货物数量-->
    <LinearLayout
        style="@style/RegionBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/RegionLabelIconBox"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wyfh_icon_dh" />
        </LinearLayout>

        <LinearLayout style="@style/RegionRowBox">


            <TextView
                style="@style/LabelFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_receive_time" />

            <LinearLayout
                android:id="@+id/optEndTime"
                style="@style/RegionRowBodyBox">

                <TextView
                    style="@style/NormalFont"
                    android:id="@+id/labEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/hint_choose_end_time"
                    android:text=""
                    android:textColorHint="@color/hint_face_color" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wyfh_icon_zk" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp" />
    <!--配送方式-->

    <LinearLayout
        style="@style/RegionBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/RegionLabelIconBox"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wyfh_icon_fkfs" />
        </LinearLayout>

        <LinearLayout style="@style/RegionRowBox">

            <TextView
                style="@style/LabelFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_pay_method" />

            <LinearLayout
                android:id="@+id/optPayMethod"
                style="@style/RegionRowBodyBox">

                <TextView
                    android:id="@+id/labPayMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/hint_select_pay_method"
                    android:text=""
                    android:textColorHint="@color/hint_face_color" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wyfh_icon_zk" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>