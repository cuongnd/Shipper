<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/ys_re"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <View
            android:id="@+id/view"
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/normal_divider_height">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘师傅"
                android:textColor="@color/most_black"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13245635210"
                android:textColor="@color/label_text_gray"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

        <View
            android:id="@+id/line_dshk"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_jt"
            android:layout_toRightOf="@id/line_dshk"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/amount_txt"
                    android:text="@string/deliverCollectionAmount"
                    android:textColor="@color/most_black"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/amount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/unit_t"
                    android:textColor="@color/orange_red"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unit_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_jt"
                    android:text="@string/unit_rmb"
                    android:textColor="@color/most_black"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付"
                    android:textColor="@color/most_black"
                    android:textSize="@dimen/normal_text_size"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付："
                    android:textColor="@color/label_text_gray"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/prepaid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_red"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/unit_rmb"
                    android:textColor="@color/label_text_gray"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_jt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@mipmap/dshk_icon_ysk" />
    </RelativeLayout>


</LinearLayout>