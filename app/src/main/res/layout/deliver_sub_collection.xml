<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_silver"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/RegionBox"
        android:id="@+id/boxGoodsAmount"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fh_icon_safe" />
        </LinearLayout>

        <LinearLayout
            style="@style/RegionRowBox"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/orange_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deliver_Insurance" />

            <LinearLayout
                style="@style/RegionRowBodyBox">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/hint_select_goods_amount"
                    android:maxLength="10"
                    android:text="@string/deliver_Insurance_Amount"
                    android:textColor="@color/orange_red"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:id="@+id/Lin_AddCollectionItem"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <include layout="@layout/deliver_sub_collection_item" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lin_AddCollection"
        android:layout_marginBottom="0.5dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yhk_icon_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="@dimen/normal_divider_height"
            android:paddingBottom="@dimen/normal_divider_height"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/bg_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deliver_AddCollection" />

        </LinearLayout>
        <LinearLayout
            android:layout_height="fill_parent"
            android:id="@+id/Lin_removeView"
            android:visibility="gone"
            android:layout_width="38dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dshk_icon_minus" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>