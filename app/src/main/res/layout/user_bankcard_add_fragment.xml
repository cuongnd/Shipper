<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                style="@style/RegionPaddingBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="26dp">

                <LinearLayout
                    style="@style/RegionLabelBox"
                    android:orientation="vertical">

                    <TextView
                        style="@style/NormalFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optBankName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/labBankName"
                        style="@style/NormalFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/hint_face_color"
                        android:hint="@string/tip_please_select" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wyfh_icon_zk" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp" />


            <LinearLayout
                style="@style/RegionPaddingBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="26dp">

                <LinearLayout
                    style="@style/RegionLabelBox"
                    android:orientation="vertical">

                    <TextView
                        style="@style/NormalFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户行" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optOpenName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/txtOpenName"
                        style="@style/NormalFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColorHint="@color/hint_face_color"
                        android:hint="请输入开户行名称" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                style="@style/RegionPaddingBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="26dp">

                <LinearLayout
                    style="@style/RegionLabelBox"
                    android:orientation="vertical">

                    <TextView
                        style="@style/NormalFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡号" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/txtCardNo"
                        style="@style/NormalFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="20"
                        android:textColorHint="@color/hint_face_color"
                        android:hint="请输入卡号" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/RegionPaddingBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="26dp">

                <LinearLayout
                    style="@style/RegionLabelBox"
                    android:orientation="vertical">

                    <TextView
                        style="@style/NormalFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户行人姓名" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/txtRealname"
                        style="@style/NormalFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColorHint="@color/hint_face_color"
                        android:hint="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp" />
            <!-- 提交按钮-->
            <Button
                android:id="@+id/btnConfirm"
                style="@style/BlueSharpFillButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
