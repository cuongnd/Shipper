<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@null">
    <LinearLayout
        android:id="@+id/Lin_conllection_item"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/icon_very_small_h"
            android:background="@color/orange_red"
            android:layout_height="fill_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deliverCollection_order"
            android:padding="@dimen/button_login"
            android:layout_marginLeft="@dimen/normal_divider_height"
            style="@style/LabelNormalText" />
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_collection_numbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="@dimen/button_login"
                android:layout_marginLeft="@dimen/normal_divider_height"
                style="@style/LabelNormalText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_order_unit_man"
                android:padding="@dimen/button_login"
                style="@style/LabelNormalText" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <!-- 报价中的订单模板 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:layout_marginTop="0.5dp">

            <TextView
                android:id="@+id/labFromArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from"
                style="@style/OrderAreaTextStyle" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/dd_icon_dz_2x" />

            <TextView
                android:id="@+id/labToArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                style="@style/OrderAreaTextStyle" />
            <ImageView
                android:id="@+id/imgCompanyIcon"
                android:src="@mipmap/dd_icon_company"
                android:visibility="gone"
                android:padding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/holdSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_order_publish"
                style="@style/LabelSmallText" />

            <TextView
                android:id="@+id/labPublishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年08月18日"
                style="@style/LabelSmallText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/labGoodsType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                style="@style/OrderTitleTextStyle" />

            <TextView
                android:id="@+id/labGoodsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="888"
                style="@style/OrderTitleTextStyle"
                android:layout_marginRight="3dp" />

            <TextView
                android:id="@+id/labUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吨"
                style="@style/OrderTitleTextStyle" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <LinearLayout
                android:id="@+id/Lin_quateNum"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btnStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/dd_icon_tx_2x" />

                <TextView
                    android:id="@+id/labStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lab_order_quote"
                    style="@style/LabelNormalText" />

                <TextView
                    android:id="@+id/labManAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    style="@style/OrderQuoteTextStyle" />

                <TextView
                    android:id="@+id/labUnitMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lab_order_unit_man"
                    style="@style/LabelSmallText" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_noManQuate"
                android:visibility="gone"
                android:text="@string/lab_qiate_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:layout_marginBottom="0.5dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_order_self_quote"
                style="@style/LabelNormalText" />

            <TextView
                android:id="@+id/labQuotePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88888"
                style="@style/OrderQuotePriceTextStyle" />

            <TextView
                android:id="@+id/labQuoteUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/方"
                style="@style/LabelNormalText" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_order_total_price"
                style="@style/LabelNormalText" />

            <TextView
                android:id="@+id/labTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88888"
                style="@style/OrderQuotePriceTextStyle" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                style="@style/LabelNormalText" />

            <TextView
                android:id="@+id/labPriceExpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text=""
                style="@style/LabelNormalText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>