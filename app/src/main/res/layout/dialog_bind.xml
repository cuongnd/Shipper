<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_stroke"
        android:layout_centerVertical="true"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_silver"
            >


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_change_sure"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/title_huge_text_size"
                />
        </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="1dp"
             android:background="@color/white"
             android:orientation="vertical"
             android:padding="14dp"
             >
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content">
                 <LinearLayout
                     style="@style/RegionPaddingBox"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                     android:orientation="horizontal">

                     <TextView
                         style="@style/LabelFont"
                         android:layout_marginLeft="@dimen/normal_divider_height"
                         android:textColor="@color/most_black"
                         android:text="持卡人：" />

                     <TextView
                         android:paddingLeft="26dp"
                         android:id="@+id/txtBindCardName"
                         android:layout_width="0.0dp"
                         android:layout_weight="5.5"
                         android:background="@null"
                         android:maxLength="32"
                         style="@style/NormalFont"
                         android:textColorHint="@color/hint_face_color"
                         />

                 </LinearLayout>
                 <LinearLayout
                     style="@style/RegionPaddingBox"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                     android:orientation="horizontal">

                     <TextView
                         style="@style/LabelFont"
                         android:layout_marginLeft="@dimen/normal_divider_height"
                         android:textColor="@color/most_black"
                         android:text="身份证：" />

                     <TextView
                         android:paddingLeft="26dp"
                         android:id="@+id/txtBindIDCard"
                         android:layout_width="0.0dp"
                         android:layout_weight="5.5"
                         android:background="@null"
                         android:maxLength="32"
                         style="@style/NormalFont"
                         android:textColorHint="@color/hint_face_color"
                         />

                 </LinearLayout>
                 <LinearLayout
                     style="@style/RegionPaddingBox"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                     android:orientation="horizontal">

                     <TextView
                         style="@style/LabelFont"
                         android:layout_marginLeft="@dimen/normal_divider_height"
                         android:textColor="@color/most_black"
                         android:text="银行卡：" />

                     <TextView
                         android:paddingLeft="26dp"
                         android:id="@+id/txtBindBankCardNumb"
                         android:layout_width="0.0dp"
                         android:layout_weight="5.5"
                         android:background="@null"
                         android:maxLength="32"
                         style="@style/NormalFont"
                         android:textColorHint="@color/hint_face_color"
                         />

                 </LinearLayout>
             </LinearLayout>


             <TextView
                 android:id="@+id/updat_content"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/icon_very_small_h"
                 android:textSize="@dimen/input_text_size"
                 android:textStyle="bold"
                 android:text="@string/dialog_change"
                 android:textColor="@color/black"
                 />

         </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lin"
            android:background="@color/white"
            android:layout_marginTop="1dp">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="50dp"
                android:text="@string/btn_cancel"
                android:textColor="@color/most_black"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/bg_silver"
                />
            <Button
                android:id="@+id/confirm_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="50dp"
                android:text="@string/btn_confirm"
                android:textColor="@color/most_black"
                />

        </LinearLayout>





        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>