<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BlankBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/chkBlue"
        android:visibility="gone"
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:background="@color/face_blue" />

    <LinearLayout
        style="@style/PicBox">
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bank_iocn_gsyh" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labName"
            style="@style/TitleFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="labName" />

        <TextView
            android:id="@+id/labCarNo"
            style="@style/LabelFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="labCarNo" />
    </LinearLayout>


    <LinearLayout
        style="@style/EndPicBox"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labStyle"
            style="@style/NormalFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="labStyle[储蓄卡]" />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/wyfh_dz_icon_djmr" />

    </LinearLayout>


</LinearLayout>