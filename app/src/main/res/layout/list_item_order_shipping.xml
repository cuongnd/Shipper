<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/Lin_conllection_item"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/icon_very_small_h"
            android:background="@color/orange_red"
            android:layout_height="fill_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deliverCollection_order"
            android:padding="@dimen/button_login"
            android:layout_marginLeft="@dimen/normal_divider_height"
            style="@style/LabelNormalText" />
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_collection_numbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="@dimen/button_login"
                android:layout_marginLeft="@dimen/normal_divider_height"
                style="@style/LabelNormalText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_order_unit_man"
                android:padding="@dimen/button_login"
                style="@style/LabelNormalText" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <!-- 报价中的订单模板 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/labFromArea"
                style="@style/OrderAreaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/dd_icon_dz_2x" />

            <TextView
                android:id="@+id/labToArea"
                style="@style/OrderAreaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to" />
            <ImageView
                android:id="@+id/imgCompanyIcon"
                android:src="@mipmap/dd_icon_company"
                android:visibility="gone"
                android:padding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/holdSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                style="@style/SmallLabelFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货时间" />

            <TextView
                android:id="@+id/labSendTime"
                style="@style/SmallLabelFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="labSendTime" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/labGoodsType"
                        style="@style/OrderTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型" />

                    <TextView
                        android:id="@+id/labGoodsAmount"
                        style="@style/OrderTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="3dp"
                        android:text="888" />

                    <TextView
                        android:id="@+id/labUnit"
                        style="@style/OrderTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吨" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView7"
                        style="@style/LabelNormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成交价格" />

                    <TextView
                        android:id="@+id/labQuotePrice"
                        style="@style/OrderQuotePriceTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="88888" />

                    <TextView
                        android:id="@+id/labQuoteUnit"
                        style="@style/LabelNormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btnPhoneCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@mipmap/dd_icon_dh" />

            <LinearLayout
                android:id="@+id/Lin_labName"
                style="@style/PaddingBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labName"
                    style="@style/NormalFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="labName" />

                <TextView
                    android:id="@+id/labCPH"
                    style="@style/SmallLabelFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="labCPH" />

            </LinearLayout>
            <LinearLayout android:id="@+id/Lin_price"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/OrderQuoteTextStyle" />
                <TextView
                    android:id="@+id/labUnitMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_rmb"
                    style="@style/LabelSmallText" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/dd_icon_yl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp">

            <TextView
                style="@style/LabelNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注：" />

            <TextView
                android:id="@+id/txtMemo"
                style="@style/LabelNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要卸货" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textView13"
                style="@style/LabelNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_order_total_price" />

            <TextView
                android:visibility="gone"
                android:id="@+id/labTotalPrice"
                style="@style/OrderQuotePriceTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88888" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textView8"
                style="@style/LabelNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元" />

            <TextView
                android:id="@+id/labPayPoint"
                style="@style/SmallLabelFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="labPayPoint" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>