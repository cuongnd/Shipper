    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <stroke
                android:width="1.2dp"
                android:color="@color/bg_blue" />
            <solid android:color="@color/bg_silver" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="1.2dp"
                android:color="@color/bg_blue" />
            <solid android:color="@color/white" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
